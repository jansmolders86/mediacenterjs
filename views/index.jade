extends layout

block declarations
	- body_class = 'homepage';

block additional_scripts
	script.
		$(function() {
			var index = 0;
			var length = $("ul").children().length;
			var delays = [
				200,
				100,
				200,
				100
			];
			
			function delayNext()
			{
				setTimeout(function() {
					$("ul li:eq(" + index + ")").show().addClass("flipin");
					index++;
					
					if (index == length)
						index = 0;
					
					delayNext();
				}, delays[index]);
			}
			
			delayNext();
			
			$('body').mcjs();
		});

block body
		#backdrop
			img.backdropimg(src="/core/css/img/backdrop.png")	
		#header
			img.logo(src="/core/css/img/logo.png")
			h1 MediacenterJS
			#dateandtime
				.time=time
				.date=date	
		#wrapper
			ul#tiles
				each item in apps
					li.tile.boxed.mcjs-rc-controllable
						a(href="/" + item.appLink + "/").mcjs-rc-clickable
							img(src="#{item.tileLink}")
